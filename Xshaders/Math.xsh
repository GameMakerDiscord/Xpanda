#define X_PI   3.14159265359
#define X_2_PI 6.28318530718

/// @return x^2
float xPow2(float x) { return (x*x); }

/// @return x^3
float xPow3(float x) { return (x*x*x); }

/// @return x^4
float xPow4(float x) { return (x*x*x*x); }

/// @return x^5
float xPow5(float x) { return (x*x*x*x*x); }